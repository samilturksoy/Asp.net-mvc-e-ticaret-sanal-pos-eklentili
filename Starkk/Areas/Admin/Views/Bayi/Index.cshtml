@model IEnumerable<Starkk.Models.Bayi>
@{
    ViewBag.Title = "Bayiler";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPageAdmin.cshtml";
}

<section class="content">
    <div class="box box-primary">
        <div class="box-body" style="">
            <p>
                @Html.ActionLink("Yeni Oluştur", "YeniOlustur")
            </p>
            <div class="row">
                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-header">
                            <h2 class="box-title">Bayi Yönetimi</h2>

                        </div>
                        <div class="box-body">
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th> @Html.DisplayNameFor(model => model.Id)</th>
                                        <th> @Html.DisplayNameFor(model => model.AdSoyad)</th>
                                        <th> @Html.DisplayNameFor(model => model.SirketAdi)</th>
                                        <th> İşlem</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Id)
                                        </td>
                                        <td>

                                            @Html.DisplayFor(modelItem => item.AdSoyad)

                                        </td>
                                        <td>

                                            @Html.DisplayFor(modelItem => item.SirketAdi)

                                        </td>
                                        <td>
                                            @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }) |
                                            @Html.ActionLink("Detaylar", "Details", new { id = item.Id }) |
                                            @Html.ActionLink("Sil", "Delete", new { id = item.Id })
                                        </td>
                                    </tr>
                                    }
                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>



    </div>



</section>

@section scripts{


    <script>
  $(function () {
    $('#example1').DataTable()
    $('#example2').DataTable({
      'paging'      : true,
      'lengthChange': false,
      'searching'   : false,
      'ordering'    : true,
      'info'        : true,
      'autoWidth'   : false
    })
  })
    </script>
}