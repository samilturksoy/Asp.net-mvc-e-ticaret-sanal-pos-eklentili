@model Starkk.Models.Slider

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPageAdmin.cshtml";
}

<h2>Slider Resmi Detay</h2>

<div>
    <h4>Slider</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Resim)
        </dt>

        <dd>
            @{
                string imageBase64 = Convert.ToBase64String(Model.Resim);
                string imageSrc = string.Format("data:image/gif;base64,{0}", imageBase64);
                <img src="@imageSrc" class="img-responsive" />
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Sirasi)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Sirasi)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Düzenle", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Listeye Geri Dön", "Index")
</p>
