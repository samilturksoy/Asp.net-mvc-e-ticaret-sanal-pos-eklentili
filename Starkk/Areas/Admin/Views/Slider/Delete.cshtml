@model Starkk.Models.Slider

@{
    ViewBag.Title = "Sil";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPageAdmin.cshtml";
}

<h2>Kalıcı olarak Sil</h2>

<h3>Bu slider Resmi Silinecek?</h3>
<div>
    <h4>Slider</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Resim)
        </dt>

        <dd>
            @{
                string imageBase64 = Convert.ToBase64String(Model.Resim);
                string imageSrc = string.Format("data:image/gif;base64,{0}", imageBase64);
                <img src="@imageSrc" class="img-responsive" />
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Sirasi)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Sirasi)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Sil" class="btn btn-danger" /> |
            @Html.ActionLink("Listeye Geri Dön", "Index")
        </div>
    }
</div>
