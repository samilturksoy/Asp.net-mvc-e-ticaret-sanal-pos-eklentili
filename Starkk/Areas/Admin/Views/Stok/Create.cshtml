@model Starkk.Models.Stok

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPageAdmin.cshtml";
}
<div class="container">

    <h2>Yeni Ürün Oluştur</h2>
    

