@model IEnumerable<Starkk.Models.Sepet>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <div class="row">
        <div class="col">
            <hr class="tall mb-4">
        </div>
    </div>


    <div class="row">
        <div class="col">

            <div class="featured-boxes">
                <div class="row">
                    <div class="col">
                        <div class="featured-box featured-box-primary text-left mt-2">
                            <div class="box-content">
                                
                                    <table class="shop_table cart">
                                        <thead>
                                            <tr>
                                                <th class="product-remove">
                                                    &nbsp;

                                                </th>
                                                <th class="product-thumbnail">
                                                    &nbsp;

                                                </th>
                                                <th class="product-name"> Ürün Adı</th>
                                                <th class="product-price">
                                                    Fiyat
                                                </th>
                                                <th class="product-quantity">
                                                    Adet
                                                </th>
                                                <th class="product-subtotal">
                                                    Toplam
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @{
                                                foreach (var item in Model)
                                                {
                                                    <form method="post" action="/Sepet/SepetGuncelle">
                                                        <input type="hidden" name="id" id="id" value="@item.Id" />
                                                        <tr class="cart_table_item">
                                                            <td class="product-remove">
                                                                <a title="Remove this item" class="remove" href="@Url.Action("Sil","Sepet",new { @id=item.Id})">
                                                                    <i class="fa fa-times"></i>
                                                                </a>
                                                            </td>
                                                            <td class="product-thumbnail">
                                                                <a href="@Url.Action("UrunDetay","Urunler",new { @id=item.Urunler.Id})">
                                                                    <img width="100" height="100" alt="" class="img-fluid" src="img/products/product-1.png">
                                                                </a>
                                                            </td>
                                                            <td class="product-name">

                                                                <a href="@Url.Action("UrunDetay","Urunler",new { @id=item.Urunler.Id})"> @Html.DisplayFor(ModelItem => item.Urunler.UrunAdi)</a>

                                                            </td>
                                                            <td class="product-price">
                                                                <span class="amount"> @Html.DisplayFor(ModelItem => item.Urunler.Fiyat)TL</span>
                                                            </td>
                                                            <td class="product-quantity">

                                                                <div class="quantity">
                                                                    <input type="number" class="input-text qty text" title="Qty" value="@item.Adet" min="1" name="adet"><button type="submit" class="plus"> <i class="fa fa-refresh">&nbsp;</i> </button>
                                                                </div>

                                                            <td class="product-subtotal">
                                                                <span class="amount">@Html.DisplayFor(ModelItem => item.ToplamTutar)TL</span>
                                                            </td>
                                                        </tr>
                                                    </form>
                                                }
                                            }


                                            <tr>
                                                <td class="actions" colspan="6">
                                                    <div class="actions-continue">
                                                        <a class="btn btn-light" href="@Url.Action("Index","Urunler")">Alışverişe Devam Et</a>
                                                        
                                                    </div>
                                                </td>
                                            </tr>
                                        </tbody>
                                            </table>

                                        </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="featured-boxes">
                <div class="row">
                    
                    <div class="col-sm-12">
                        <div class="featured-box featured-box-primary text-left mt-3 mt-lg-4">
                            <div class="box-content">
                                <h4 class="heading-primary text-uppercase mb-3">Toplam Tutar</h4>
                                <table class="cart-totals">
                                    <tbody>
                                        <tr class="cart-subtotal">
                                            <th>
                                                <strong>Ürünlerin Toplamı</strong>
                                            </th>
                                            <td>
                                                <strong><span class="amount">@Model.Sum(a=>a.ToplamTutar) TL</span></strong>
                                            </td>
                                        </tr>
                                        <tr class="shipping">
                                            <th>
                                                Kargo
                                            </th>
                                            <td>
                                                Kargo Bedava<input type="hidden" value="free_shipping" id="shipping_method" name="shipping_method">
                                            </td>
                                        </tr>
                                        <tr class="total">
                                            <th>
                                                <strong>Toplam Tutar</strong>
                                            </th>
                                            <td>
                                                <strong><span class="amount">@Model.Sum(a => a.ToplamTutar) TL</span></strong>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

            <div class="row">
                <div class="col">
                    <div class="actions-continue">

                        <a href="@Url.Action("SiparisTamamla","Siparis")" class="btn float-right btn-primary btn-lg">Ödeme sayfasına git<i class="fa fa-angle-right ml-1"></i></a>





                    </div>
                </div>
            </div>

        </div>
    </div>



</div>

