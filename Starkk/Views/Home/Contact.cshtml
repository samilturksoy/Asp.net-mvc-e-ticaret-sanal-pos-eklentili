@model  Starkk.Models.Iletisim
@{
    ViewBag.Title = "İletisim";
}


<div id="googlemaps" class="google-map"></div>
<div class="container">
    <div class="row">
        <div class="col-lg-6">

            <div class="alert alert-success d-none mt-4" id="contactSuccess">
                <strong>Başarılı!</strong> Mesajınız başarılı şekilde gönderildi.
            </div>

            <div class="alert alert-danger d-none mt-4" id="contactError">
                <strong>Hata !</strong> Mesajınız Gönderilemedi..!!!
                <span class="text-1 mt-2 d-block" id="mailErrorMessage"></span>
            </div>

            <h2 class="mb-3 mt-2"><strong>İletişim</strong></h2>

            <form id="contactForm" action="~/Home/Contact#" method="POST">
                <div class="form-row">
                    <div class="form-group col-lg-6">
                        <label>İsminiz *</label>
                        <input type="text" value="" data-msg-required="Lütfen İsminizi Giriniz." maxlength="100" class="form-control" name="name" id="name" required>
                    </div>
                    <div class="form-group col-lg-6">
                        <label>Email adres *</label>
                        <input type="email" value="" data-msg-required="Lütfen mail adresinizi girin." data-msg-email="Lütfen geçerli bir mail adresi giriniz." maxlength="100" class="form-control" name="kulmail" id="email" required>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col">
                        <label>Telefon</label>
                        <input type="text" value="" data-msg-required="Lütfen konuyu giriniz." maxlength="100" class="form-control" name="Telefon" id="subject" required>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col">
                        <label>Mesaj *</label>
                        <textarea maxlength="5000" data-msg-required="Lütfen mesajınızı yazınız." rows="10" class="form-control" name="message" id="message" required></textarea>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col">
                        <input type="submit" value="Mesaj Yolla" class="btn btn-primary btn-lg" data-loading-text="Gönderiliyor...">
                    </div>
                </div>
            </form>
        </div>
        <div class="col-lg-6">

            <h4 class="heading-primary mt-4"> <strong>STARK</strong></h4>
            <p>@Model.Aciklama </p>
            <hr>

            <h4 class="heading-primary"><strong>Ofis</strong></h4>
            <ul class="list list-icons list-icons-style-3 mt-4">
                <li><em class="fa fa-map-marker"></em> <strong>Adres:</strong> @Model.Adres</li>
                <li><i class="fa fa-phone"></i> <strong>Telefon:</strong> @Model.Telefon</li>
                <li><i class="fa fa-phone"></i> <strong>Telefon:</strong>  @Model.Telefon2</li>
                <li><i class="fa fa-envelope"></i> <strong>Email:</strong> <a href="mailto:mail@example.com"> @Model.Email</a></li>
            </ul>

            <hr>

            <h4 class="heading-primary">Çalışma <strong>Saatlerimiz</strong></h4>
            <ul class="list list-icons list-dark mt-4">
                <li><i class="fa fa-clock-o"></i>Pazartesi - Cuma : @Model.Haftaici</li>
                <li><i class="fa fa-clock-o"></i>Cumartesi :  @Model.Cumartesi</li>
                <li><i class="fa fa-clock-o"></i>Pazar :  @Model.Pazar</li>
            </ul>

        </div>

    </div>

</div>

<section class="call-to-action call-to-action-default with-button-arrow content-align-center call-to-action-in-footer">
    <div class="container">
        <div class="row">
            <div class="col-md-9 col-lg-9">
                <div class="call-to-action-content">
                    <h3><strong>Stark Merkezi Süpürge Sistemi</strong> ile temizliğe bakış açınız değişecek<strong> gerçek ve rahat </strong>temizliğin tadına varacaksınız!</h3>
                    <p class="mb-0">Sizde hemen  <strong>online sipariş vermek için</strong> yan taraftaki butona tıklayabilirsiniz.</p>
                </div>
            </div>
            <div class="col-md-3 col-lg-3">
                <div class="call-to-action-btn">
                    <a href="@Url.Action("Index","Urunler")" target="_blank" class="btn btn-lg btn-primary">Alışveriş Yap!</a><span class="arrow hlb d-none d-md-block" data-appear-animation="rotateInUpLeft" style="top: -40px; left: 70%;"></span>
                </div>
            </div>
        </div>
    </div>
</section>