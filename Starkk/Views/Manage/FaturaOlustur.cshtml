@model Starkk.Models.Sipari
@{
    ViewBag.Title = "Fatura Yazdır";
    
}
<div class="container">
    <section class="content">
        <div class="wrapper">
            <!-- Main content -->
            <section class="invoice">
                <!-- title row -->
                <div class="row">
                    <div class="col-xs-12">
                        <h2 class="page-header">
                            <i class="fa fa-globe"></i> STARK MSS.
                            <small class="pull-right">Tarih: @Model.Tarih</small>
                        </h2>
                    </div>
                    <!-- /.col -->
                </div>
                <!-- info row -->
                <div class="row invoice-info">
                    <div class="col-sm-4 invoice-col">
                        Satıcı
                        <address>
                            <strong>STARK MSS.</strong><br>
                            Bahçelievler Mahallesi, <br>
                            Bahçelievler Caddesi, <br>
                            Çimen Apartmanı, <br>
                            No:25/A Talas/KAYSERİ, <br>

                            Telefon: (541) 396 4264<br>
                            Email: info@starkmss.com
                        </address>
                    </div>
                    <!-- /.col -->
                    <div class="col-sm-4 invoice-col">
                        Alıcı
                        <address>
                            <strong>@Model.Ad @Model.Soyad</strong><br>
                            @Model.Adres<br />
                            Telefon: @Model.Telefon<br>

                        </address>
                    </div>
                    <!-- /.col -->
                    <div class="col-sm-4 invoice-col">
                        <b>Fatura No #00STR-@Model.Id</b><br>
                        <br>
                        <b>Satış ID:</b> @Model.Id<br>
                        <b>Ödeme Tarihi:</b> @Model.Tarih<br>
                        <b>Kullanıcı Id:</b> @Model.RefAspNetUserID
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
                <!-- Table row -->
                <div class="row">
                    <div class="col-xs-12 table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>

                                    <th>Ürün Adı</th>
                                    <th>Adet</th>
                                    <th>Fiyat</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.SiparisKalems)
                                {
                                    <tr>
                                        <td>@item.Urunler.UrunAdi</td>
                                        <td>@item.Adet</td>

                                        <td>@item.Urunler.Fiyat</td>

                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
                <div class="row">
                    <!-- accepted payments column -->
                    <!-- /.col -->
                    <div class="col-xs-6">
                        <p class="lead">Ödeme Tarihi @Model.Tarih.ToShortDateString()</p>
                        <div class="table-responsive">
                            <table class="table">
                                <tr>
                                    <th style="width:50%">Ara Toplam:</th>
                                    <td>@Model.SiparisKalems.Sum(m => m.ToplamTutar)</td>
                                </tr>

                                <tr>
                                    <th>Kargo:</th>
                                    <td>0,00</td>
                                </tr>
                                <tr>
                                    <th>Total:</th>
                                    <td>@Model.SiparisKalems.Sum(m => m.ToplamTutar)</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
            </section>
            <!-- /.content -->
        </div>
    </section>
</div>
<body onload="window.print();">
     <!-- ./wrapper -->
</body>


