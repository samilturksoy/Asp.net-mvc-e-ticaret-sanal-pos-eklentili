@model Starkk.Models.BlogYazi

@{
    ViewBag.Title =Model.Baslik+" "+ "Blog Detay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="page-header">
    <div class="container">
        <div class="row">
            <div class="col">
                <ul class="breadcrumb">
                    <li><a href="@Url.Action("Index","Blog")">Tüm Yazılar</a></li>
                    <li class="active">@Model.Baslik</li>
                </ul>
            </div>
        </div>
        
    </div>
</section>
<div class="container">

    <div class="row">
        <div class="col-lg-12">
            <div class="blog-posts single-post">

                <article class="post post-large blog-single-post">


                    <div class="post-date">
                        <span class="day">@Model.Tarih.Day</span>
                        <span class="month">@Model.Tarih.ToString("MMM")</span>
                    </div>

                    <div class="post-content">

                        <h2><a href="#">@Model.Baslik</a></h2>

                        <div class="post-meta">
                            <span><i class="fa fa-user"></i> By <a href="#">@Model.Yazar</a> </span>
                            <span><i class="fa fa-tag"></i>@Model.Seo </span>

                        </div>

                        @Html.Raw(Model.Yazi)








                    </div>
                </article>

            </div>
        </div>


    </div>


    <p>

        @Html.ActionLink("Tüm Yazıları Gör", "Index")
    </p>


</div>










